extends ../layout

block content
    h1.
         #{title}
    ol
         each clue, i in clues
            li
                b #{clue.question} #{clue.answer}
                br
                | updated:
                a &nbsp&nbsp&nbsp 
                | #{clue.updated}
                br
                | likes:
                a &nbsp&nbsp&nbsp 
                b #{clue.likes}
                br
                
                
                
                form(action='/clues/#{clue._id}/delete',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit'). 
                        Delete
                
                p
                

